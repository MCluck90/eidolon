{
    "name": "Example Job",
    "initURL": "https://www.google.com",
    "confirm": {
        "selector": "title",
        "attribute": "text",
        "value": "Google"
    },
    "steps": [
        {
            "name": "Google 'Google'",
            "link": {
                "selector": "input[value='Google Search']",
                "click": true
            }
        },
        {
            "name": "Click First Result",
            "waitForReload": false,
            "confirm": {
                "selector": "li.g",
                "exists": true
            },
            "link": {
                "selector": "li.g:first-child a",
                "follow": true
            }
        }
    ]
}