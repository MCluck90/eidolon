{
    "name": "Example Job",
    "initURL": "https://www.google.com",
    "steps": [
        {
            "name": "Google 'Google'",
            "confirm": {
                "selector": "title",
                "attribute": "text",
                "value": "Google"
            },
            "link": {
                "selector": "form[action='/search']",
                "submit": true
            }
        },
        {
            "name": "Click First Result",
            "confirm": {
                "selector": "li.g",
                "exists": true
            },
            "link": {
                "waitForPageLoad": true,
                "selector": "li.g:first-child a",
                "follow": true
            }
        }
    ]
}